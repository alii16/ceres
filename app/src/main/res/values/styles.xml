<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->

    <!-- Header Title Styles -->
    <style name="HeaderTitleExpanded" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/white_alpha_90</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeaderTitleCollapsed" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom Text Input Style -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomPrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Custom Card Style -->
    <style name="CustomCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
    </style>

    <!-- Custom Chip Style -->
    <style name="CustomChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="chipMinHeight">36dp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.Material3.DayNight">
        <!-- Switch track color when unchecked -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- Switch track color when checked -->
        <item name="colorControlActivated">@color/md_theme_primary</item>
        <!-- Switch thumb color when unchecked -->
        <item name="android:colorForeground">@color/gray_300</item>
        <!-- Switch thumb color when checked -->
        <item name="colorAccent">@color/md_theme_primary</item>
    </style>

    <!-- Alternative Material 3 Switch Style -->
    <style name="SwitchTheme.Material3" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchMaterialThemeOverlay</item>
    </style>

    <style name="SwitchMaterialThemeOverlay">
        <!-- Track colors -->
        <item name="colorOutline">@color/switch_track_unchecked</item>
        <item name="colorSurfaceVariant">@color/switch_track_checked</item>
        <!-- Thumb colors -->
        <item name="colorOnSurface">@color/switch_thumb_unchecked</item>
        <item name="colorPrimary">@color/switch_thumb_checked</item>
    </style>
</resources>