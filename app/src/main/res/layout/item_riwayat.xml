<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/md_theme_surface"
    app:cardElevation="0dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Status Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/iconContainer">

                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_dark" />

            </androidx.cardview.widget.CardView>

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Header row (Kurir dan Status) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Kurir badge -->
                    <TextView
                        android:id="@+id/tvKurir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JNE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/badge_blue"
                        android:textColor="@color/blue_dark"
                        android:layout_marginEnd="8dp" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Status -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TERKIRIM"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark" />

                </LinearLayout>

                <!-- Nomor Resi -->
                <TextView
                    android:id="@+id/tvResi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JP123456789ID"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paket telah diterima oleh penerima"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="12dp" />

                <!-- Footer row (Tanggal dan Detail button) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Tanggal -->
                    <TextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15 Agu 2025, 14:30"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint" />

                    <!-- Detail button -->
                    <TextView
                        android:id="@+id/btnDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_dark"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</com.google.android.material.card.MaterialCardView>