<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp">

    <!-- Timeline Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginEnd="16dp">

        <!-- Dot -->
        <View
            android:id="@+id/timelineDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/timeline_dot_active"
            android:layout_marginTop="4dp" />

        <!-- Line -->
        <View
            android:id="@+id/timelineLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/md_theme_outline"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:visibility="visible" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/txtTimelineDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="21 Aug 2025, 14:30"
                android:textColor="@color/md_theme_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/success_alpha_10">

                <TextView
                    android:id="@+id/txtTimelineStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELIVERED"
                    android:textColor="@color/md_theme_success"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:id="@+id/txtTimelineDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paket telah diterima oleh penerima"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>
</LinearLayout>