<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header dengan gradient background -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/gradient_header_bg"
        android:padding="24dp">

        <!-- Header content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon dan title -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white_alpha_20"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_history"
                        app:tint="@color/white" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lacakan sebelumnya"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white_alpha_20"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_filter"
                        app:tint="@color/white" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white_alpha_20"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/btnHapusSemua"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/white" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Filter Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filterCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/btnSemua"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="Semua"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="@drawable/button_filter_active"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnTerkirim"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="Terkirim"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="@drawable/button_filter_inactive"
                android:textColor="@color/text_hint"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnProses"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="Proses"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="@drawable/button_filter_inactive"
                android:textColor="@color/text_hint"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnGagal"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="Gagal"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="@drawable/button_filter_inactive"
                android:textColor="@color/text_hint" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- RecyclerView untuk riwayat -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRiwayat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterCard"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- Simple Empty State dengan Lottie Animation -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:lottie_rawRes="@raw/package_opening"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <!-- Simple Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada riwayat"
            android:textSize="14sp"
            android:textColor="@color/gray_medium"
            android:gravity="center" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled" />

</RelativeLayout>